@model IEnumerable<SuperHero.Models.Hero>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<img src="~/Images/EvilJoker.jpg" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.heroName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.alterEgoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.primaryAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.secondaryAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catchphrase)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.heroName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.alterEgoName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.primaryAbility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.secondaryAbility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.catchphrase)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
